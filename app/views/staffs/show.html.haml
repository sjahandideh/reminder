- model_class = Staff
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @staff.name
%p
  %strong= model_class.human_attribute_name(:payroll_number) + ':'
  %br
  = @staff.payroll_number
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @staff.phone
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @staff.email

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), staffs_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_staff_path(@staff), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), staff_path(@staff), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
