- model_class = Appointment
.page-header
  %h1=t '.title'

%p
  %strong= model_class.human_attribute_name(:datetime) + ':'
  %br
  = l @appointment.datetime
%p
  %strong= model_class.human_attribute_name(:message) + ':'
  %br
  = @appointment.message

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), appointments_path(@staff_name), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_appointment_path(@staff_name, @appointment), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), appointment_path(@staff_name, @appointment), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
